<h1>
  Pending orders
</h1>

<table>
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Order Number</th>
    <th>Total Price</th>
    <th>Order Status</th>
    <th>Order Items</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @pending_orders.each do |pending_order| %>
    <tr>
      <td><%= pending_order.user.full_name %></td>
      <td><%= pending_order.order_number %></td>
      <td><%= pending_order.total_price %></td>
      <td><%= pending_order.status %></td>
      <td>
        <table>
          <thead>
          <tr>
            <th>Product Name</th>
            <th>Quantity</th>
          </tr>
          </thead>
          <tbody>
          <% pending_order.order_items.each do |pending_order_item| %>
            <tr>
              <td><%= pending_order_item.product.name %></td>
              <td><%= pending_order_item.quantity %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </td>
      <td><%= link_to "View Order", admin_dashboard_path(pending_order) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="pagination-container">
  <%= paginate @pending_orders %>
</div>