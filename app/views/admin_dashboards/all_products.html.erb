<h1>All the products</h1>
<table>
  <thead>
  <tr>
    <th>Image</th>
    <th><%= sort_link @q, :name %></th>
    <th><%= sort_link @q, :price %></th>
    <th><%= sort_link @q, :quantity %></th>
    <th><%= sort_link @q, :brand %></th>
    <th><%= sort_link @q, :component %></th>
    <th><%= sort_link @q, :created_at %></th>
    <th><%= sort_link @q, :updated_at %></th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.product_image %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.brand %></td>
      <td><%= product.component %></td>
      <td><%= product.created_at.strftime("%d %b %Y %I:%M:%S %p") %></td>
      <td><%= product.updated_at.strftime("%d %b %Y %I:%M:%S %p") %></td>
      <td>
        <%= link_to 'View', product_path(product) %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to "Delete", product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="pagination-container">
<%= paginate @products %>
</div>