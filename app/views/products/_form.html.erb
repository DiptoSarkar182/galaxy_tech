<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div role="alert" >
      <h2 ><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div >
    <%= form.label :product_image, "Attach photo (Max Size 5MB):" %>
    <%= form.file_field :product_image, accept: 'image/png,image/gif,image/jpeg,image/webp'%>
  </div>

  <div >
    <%= form.label "Name:" %>
    <%= form.text_field :name, placeholder: "" %>
  </div>

  <div>
    <%= form.label :price, "Price (USD):" %>
    <%= form.number_field :price, step: 0.01, min: 0 %>
  </div>

  <div>
    <%= form.label "Quantity:" %>
    <%= form.number_field :quantity, step: 1, min: 0 %>
  </div>

  <div >
    <%= form.label "Brand Name:" %>
    <%= form.text_field :brand, placeholder: "" %>
  </div>

  <div>
    <%= form.label "Which Component:" %>
    <%= form.select :component, options_for_select([
                                                     ["Processor", "Processor"],
                                                     ["CPU Cooler", "CPU Cooler"],
                                                     ["Water / Liquid Cooling", "Water / Liquid Cooling"],
                                                     ["Motherboard", "Motherboard"],
                                                     ["Graphics Card", "Graphics Card"],
                                                     ["RAM (Desktop)", "RAM (Desktop)"],
                                                     ["Ram (Laptop)", "Ram (Laptop)"],
                                                     ["Power Supply", "Power Supply"],
                                                     ["Hard Disk Drive", "Hard Disk Drive"],
                                                     ["Portable Hard Disk Drive", "Portable Hard Disk Drive"],
                                                     ["SSD", "SSD"],
                                                     ["Portable SSD", "Portable SSD"],
                                                     ["Casing", "Casing"],
                                                     ["Casing Cooler", "Casing Cooler"],
                                                     ["Monitor", "Monitor"],
                                                     ["Phone", "Phone"]
                                                   ].sort, selected: @product.component), include_blank: "Select Component" %>
  </div>

  <div >
    <%= form.label "Key features:" %>
    <%= form.rich_text_area :key_features, placeholder: "" %>
  </div>

  <div >
    <%= form.label "Specifications:" %>
    <%= form.rich_text_area :specification, placeholder: "" %>
  </div>

  <div >
    <%= form.label "Description:" %>
    <%= form.rich_text_area :description, placeholder: "" %>
  </div>

  <div>
    <%= form.submit  %>
  </div>
<%end %>