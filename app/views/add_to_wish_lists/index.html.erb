<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Your Wishlist</h1>

  <div class="space-y-6">
    <% @wishlist_products.each do |product| %>
      <div class="flex bg-white shadow-md rounded-lg overflow-hidden">
        <div class="w-1/4 flex-shrink-0">
          <% if product.product_image.attached? %>
            <%= image_tag product.product_image, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500">No image</span>
            </div>
          <% end %>
        </div>
        <div class="w-3/4 p-6 flex">
          <div class="flex-grow">
            <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= product.name %></h2>
            <p class="text-gray-700 text-lg mb-2"><%= number_to_currency(product.price) %> USD</p>
            <p class="text-sm">
              <% if product.quantity > 0 %>
                <span class="text-green-600 font-medium">In Stock</span>
              <% else %>
                <span class="text-red-600 font-medium">Out of Stock</span>
              <% end %>
            </p>
          </div>
          <div class="flex items-center ml-4">
            <%= link_to 'View Product', product_path(product), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out whitespace-nowrap" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>