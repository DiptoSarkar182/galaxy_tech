<!DOCTYPE html>
<html>
  <head>
    <title><%= @title ? "#{@title} | Galaxy Tech" : "Galaxy Tech" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <meta name="turbo-cache-control" content="no-cache">
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-wrap items-center justify-between mb-8">
      <%= link_to root_path do %>
        <%= image_tag 'Galaxytechv2.svg', alt: 'Galaxy Tech', class: 'h-12' %>
      <% end %>
      <div class="flex items-center ml-auto">
        <%= form_with url: search_product_products_path, method: :get, class: 'flex' do |form| %>
          <%= form.text_field :product_name, placeholder: "Search", required: true, value: (params[:product_name] unless current_page?(root_path)), autocomplete: 'off', class: 'border border-gray-300 rounded-l-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
          <%= form.button type: :submit, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-r-md hidden" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
      <div class="flex items-center ml-4">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <div class="mr-4 text-gray-700">
              Hello, <%= current_user.full_name %> (Admin)
            </div>
            <div class="mr-4">
              <%= link_to "Admin Dashboard", admin_dashboards_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md' %>
            </div>
          <% else %>
            <div class="mr-4 text-gray-700">
              Hello, <%= current_user.full_name %>
            </div>
            <div class="mr-4">
              <%= link_to 'My orders', orders_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md' %>
            </div>
          <% end %>
          <div>
            <%= button_to "Log Out", destroy_user_session_url, method: "delete", class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md' %>
          </div>
        <% else %>
          <div class="mr-4">
            <%= button_to "Log In", new_user_session_url, method: "get", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md' %>
          </div>
          <div>
            <%= button_to "Sign Up", new_user_registration_url, method: "get", class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-md' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex flex-wrap justify-center -mx-2 my-8">
      <% @components.each do |component| %>
        <% next if component.blank? %>
        <%= link_to component, search_product_by_component_products_path(component: component), class: 'component-link bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md m-2' %>
      <% end %>
    </div>

    <div class="flex justify-between items-center mb-8">
      <turbo-frame id="cart_info" class="flex items-center">
        <div class="mr-4">
          <% if user_signed_in? && !current_user.admin? %>
            <div class="flex items-center">
              <% if @cart %>
                <div class="mr-2">
                  <%= link_to carts_path, data: {turbo_frame: "_top"} do %>
                    <%= image_tag "cart_icon.png", alt: "cart icon", width: "24", height: "24" %>
                  <% end %>
                </div>
                (<%= @cart.cart_items.sum(:quantity) || 0 %>)
              <% else %>
                <div class="mr-2">
                  <%= link_to carts_path, data: {turbo_frame: "_top"} do %>
                    <%= image_tag "cart_icon.png", alt: "cart icon", width: "24", height: "24" %>
                  <% end %>
                </div>
                (<%= @cart&.cart_items&.sum(:quantity) || 0 %>)
              <% end %>
            </div>
            <div class="text-indigo-600 font-semibold">
              Total price: <%= number_to_currency(@cart&.total_price || 0, unit: '', format: "%n %u") %> USD
            </div>
          <% end %>
        </div>
      </turbo-frame>
    </div>
  </div>

  <% if alert || notice %>
    <div class="mb-8 w-full max-w-md mx-auto">
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md text-center animate-bounce relative">
          <button type="button" class="absolute right-0 top-0 mt-2 mr-2 text-green-400 hover:text-green-500" onclick="this.parentElement.style.display='none';">&times;</button>
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md text-center animate-bounce relative">
          <button type="button" class="absolute right-0 top-0 mt-2 mr-2 text-red-400 hover:text-red-500" onclick="this.parentElement.style.display='none';">&times;</button>
          <%= alert %>
        </div>
      <% end %>
    </div>
  <% end %>

    <%= yield %>

  </body>
</html>