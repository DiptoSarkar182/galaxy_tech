<%- if controller_name != 'sessions' %>
  <div class="mt-4 text-center">
    Already have an account?
    <%= link_to "Log in here", new_session_path(resource_name), class: "text-indigo-500 hover:text-indigo-600 transition-colors duration-300" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-4 text-center">
    Don't have an account?
    <%= link_to "Sign up here", new_registration_path(resource_name), class: "text-indigo-500 hover:text-indigo-600 transition-colors duration-300" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb-2 text-center">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-500 hover:text-blue-700 font-semibold" %>
  </p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="mb-2 text-center">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-sm text-blue-500 hover:text-blue-700 font-semibold" %>
  </p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% provider_name = provider == :google_oauth2 ? 'Google' : OmniAuth::Utils.camelize(provider) %>
    <%= button_to "Sign in with #{provider_name}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded" %>
  <% end %>
<% end %>
