<h2 class="text-2xl font-bold mb-4 text-center text-indigo-600">Log in</h2>

<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-medium mb-2 text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium mb-2 text-gray-700" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2 focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "font-medium text-gray-700" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full transition-colors duration-300 transform hover:scale-105" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "mt-4 block text-indigo-500 hover:text-indigo-600 transition-colors duration-300" %>
</div>