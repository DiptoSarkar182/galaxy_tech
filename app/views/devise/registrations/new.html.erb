<h2 class="text-2xl font-bold mb-4 text-center text-indigo-600">Sign up</h2>

<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :full_name, class: "block font-medium mb-2 text-gray-700" %><br />
      <%= f.text_field :full_name, autofocus: true, autocomplete: "last name", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
      <% if resource.errors[:full_name].any? %>
        <div class="text-red-500 text-sm" role="alert">
          <%= resource.errors.full_messages_for(:full_name).first %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium mb-2 text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
      <% if resource.errors[:email].any? %>
        <div class="text-red-500 text-sm" role="alert">
          <%= resource.errors.full_messages_for(:email).first %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium mb-2 text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
      <% if resource.errors[:password].any? %>
        <div class="text-red-500 text-sm" role="alert">
          <%= resource.errors.full_messages_for(:password).first %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-medium mb-2 text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-300" %>
      <% if resource.errors[:password_confirmation].any? %>
        <div class="text-red-500 text-sm" role="alert">
          <%= resource.errors.full_messages_for(:password_confirmation).first %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full transition-colors duration-300 transform hover:scale-105" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "mt-4 block text-indigo-500 hover:text-indigo-600 transition-colors duration-300" %>
</div>